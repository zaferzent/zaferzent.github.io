/*Full Screen Search Box*/
.overlay{height:0;width:100%;position:fixed;z-index:1;top:0;left:0;background-color:#fff;overflow-y:hidden;transition:.5s;z-index:999999}
.overlay-content{position:relative;top:25%;width:100%;text-align:center;margin-top:30px}
.overlay a{padding:8px;text-decoration:none;font-size:36px;color:#818181;display:block;transition:.3s}
.overlay a:hover,.overlay a:focus{color:#f1f1f1}
.overlay .closebtn{position:absolute;top:20px;right:45px;font-size:60px}
.overlay-content input[type="search"]{text-align:center;border:none;font-size:45px;font-weight:700;color:#333;border-bottom:7px solid #d1d1d1}
.overlay-content input[type="search"]:focus{outline:0!important}
@media screen and (max-height: 450px) {
.overlay{overflow-y:auto}
.overlay a{font-size:20px}
.overlay .closebtn{font-size:40px;top:15px;right:35px}}
