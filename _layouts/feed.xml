---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}{{ site.baseurl }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <language>tr</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>

    {% assign all_content = site.blog | concat: site.notes | concat: site.photos | concat: site.bookmarks | sort: 'date' | reverse %}
    {% for item in all_content %}
      <item>
        <title>{{ item.title | xml_escape }}</title>
        <link>{{ site.url }}{{ item.url }}</link>
        <pubDate>{{ item.date | date_to_rfc822 }}</pubDate>
        <guid>{{ site.url }}{{ item.url }}</guid>
        <description><![CDATA[
          {{ item.content | markdownify | strip_html}}
        ]]></description>
      </item>
    {% endfor %}
  </channel>
</rss>

